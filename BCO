create database G03_3S;

use G03_3S;

CREATE TABLE Usuario (
    IdUsuario int identity(1,1) PRIMARY KEY,
    NomeUsuario varchar(255) NOT NULL,
    RpUsuario int NOT NULL,
	Email varchar(255) NOT NULL,
	Senha varchar(20) NOT NULL,
	CPF varchar(11) NOT NULL,
	Cargo varchar (255) NOT NULL,
	Estado varchar(50) NOT NULL,
	Foto varbinary(max),
	IdSmartwatch varchar(30) NOT NULL,
	IdComputador varchar(30) NOT NULL,
	IdSmartphone varchar(30) NOT NULL
);
CREATE TABLE Aparelho(
	IdAparelho int primary key,
	NomeAParelho varchar(50)
	

foreign key (IdAparelho) references Usuario(IdUsuario)
);

create table ponto (
IdUsuarioPonto int primary key,
Hora datetime,
foreign key (IdUsuarioPonto)  references Usuario(IdUsuario)
);
CREATE TABLE Documentacao (
	IdDocumento int  NOT NULL  PRIMARY KEY,
	Autor int NOT NULL,
	Documento varbinary(max) NOT NULL,
	NomeDocumento varchar(255) NOT NULL,
	 foreign key (Autor) references Usuario(IdUsuario)
);
